#!/bin/bash

# Convert WATER (base water: w=0, a=1, t=2, e=3, r=4) to decimal
water_dec=$(echo "$WATER" | tr 'water' '01234' | bc -l)

# Convert STIR (base stir: s=0, t=1, i=2, r=3) to decimal
stir_dec=$(echo "$STIR" | tr 'stir' '0123' | bc -l)

# Add the two decimal numbers
sum_dec=$(echo "$water_dec + $stir_dec" | bc)

# Convert sum to base bestchol (b=0, e=1, s=2, t=3, c=4, h=5, o=6, l=7)
# Use bc to convert to base 8, then map 0-7 to bestchol characters
sum_base8=$(echo "obase=8; $sum_dec" | bc)
result=$(echo "$sum_base8" | tr '01234567' 'bestchol')

# Print the result
echo "$result"
